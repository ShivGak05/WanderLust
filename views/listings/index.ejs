    <div class="row row-cols-lg-3 row-cols-md-3 mt-3 row-cols-sm-1">
   <%for(listing of allListings){%>
    <a class="listing-link" href="/listings/<%=listing._id%>">
    <div class="card">
  <img src="<%=listing.image.url%>" class="card-img-top" alt="..." style="height: 20rem" >
  <div class="card-img-overlay"></div>
  <div class="card-body">
    <p class="card-text">
        <b><%=listing.title%></b><br>
        &#8377;<%=listing.price.toLocaleString("en-IN")%>
        <i class="tax-info">&nbsp; &nbsp; +18%GST</i>
    </p>
  </div>
</div>
</a>
   <%}%>
    </div>
</body>
<script>
    let taxSwitch=document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("click",()=>{
      let element=document.getElementsByClassName("tax-info");
      for(ele of element){
        if(ele.style.display!="inline"){
        ele.style.display="inline";
      }else{
        ele.style.display="none";
      }
    }
    })
</script>
